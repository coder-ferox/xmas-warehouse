@using Web.Models
@{
    ViewBag.Title = "Toys";
}
@model Toys

@if (Session["UserID"] != null)
{
    <div class="row">
            <h2 style="text-align:center;">Toys</h2>
    </div>
    if (Session["isAdmin"] != null)
    {
        <img src="~/Content/santa-dancing.gif" class="santa-dancing" />
    }
    else
    {
        <img src="~/Content/ziggy.gif" class="ziggy" />
    }
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>How many</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var toy in Model.EntityList.OrderBy(toy => toy.Amount))
            {
                <tr>

                    <td>
                        @toy.Name
                    </td>
                    <td>
                        @toy.Amount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    Layout = "~/Views/Shared/Error.cshtml";
}
